<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatthewGormleyWordleProject.Pages.GamePage"
             Title="GamePage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">
	
    <VerticalStackLayout BackgroundColor="Black">
		<Grid x:Name="GameGrid" BackgroundColor="Black"
              HorizontalOptions="Center" VerticalOptions="Center"
              RowSpacing="3" ColumnSpacing="3" Padding="40"
              ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*,*,*,*,*">
		</Grid>

		<Entry x:Name="userInput" Placeholder="Type Entry Here: " BackgroundColor="Gray" TextChanged="OnTextChanged" Completed="CheckResult" HeightRequest="25" WidthRequest="200"/>

		<Label Text="Timer: " x:Name="TimerDisplay" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="25" WidthRequest="200"/>
        <Button Text="Results Page" Clicked="OpenResultsPage" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="25" WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>